<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Modular.Gui.ViewModels"
             xmlns:models="using:Modular.Gui.Models"
             xmlns:mi="using:Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="Modular.Gui.Views.ModListView"
             x:DataType="vm:ModListViewModel">

    <Design.DataContext>
        <vm:ModListViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header with domain selector -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,15">
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Game:" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding AvailableDomains}"
                          SelectedItem="{Binding SelectedDomain}"
                          IsEditable="True"
                          MinWidth="200"
                          PlaceholderText="Enter or select game domain"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                <Button Command="{Binding RefreshModsCommand}" ToolTip.Tip="Refresh mod list">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <mi:MaterialIcon Kind="Refresh" Width="16" Height="16"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding CheckForUpdatesCommand}" ToolTip.Tip="Check for mod updates">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <mi:MaterialIcon Kind="Update" Width="16" Height="16"/>
                        <TextBlock Text="Check Updates"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Search and filter bar -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto,Auto" Margin="0,0,0,10">
            <TextBox Grid.Column="0" 
                     Text="{Binding SearchText}" 
                     Watermark="Search mods..."
                     Margin="0,0,10,0">
                <TextBox.InnerLeftContent>
                    <mi:MaterialIcon Kind="Magnify" Width="16" Height="16" Margin="8,0,0,0" Opacity="0.5"/>
                </TextBox.InnerLeftContent>
            </TextBox>

            <Button Grid.Column="1" Command="{Binding SelectAllCommand}" 
                    Content="Select All" Margin="0,0,5,0"/>
            <Button Grid.Column="2" Command="{Binding SelectNoneCommand}" 
                    Content="Select None" Margin="0,0,5,0"/>
            <TextBlock Grid.Column="3" VerticalAlignment="Center" Opacity="0.7">
                <Run Text="{Binding SelectedCount}"/>
                <Run Text=" selected"/>
            </TextBlock>
        </Grid>

        <!-- Mod list -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                CornerRadius="8" Padding="1">
            <Grid>
                <!-- Loading indicator -->
                <StackPanel IsVisible="{Binding IsLoading}" 
                            VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                    <ProgressBar IsIndeterminate="True" Width="200"/>
                    <TextBlock Text="{Binding StatusMessage}" HorizontalAlignment="Center" Opacity="0.7"/>
                </StackPanel>

                <!-- Mod DataGrid -->
                <DataGrid IsVisible="{Binding !IsLoading}"
                          ItemsSource="{Binding FilteredMods}"
                          AutoGenerateColumns="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          GridLinesVisibility="Horizontal"
                          IsReadOnly="False"
                          SelectionMode="Extended">
                    <DataGrid.Columns>
                        <!-- Selection checkbox -->
                        <DataGridTemplateColumn Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="models:ModDisplayModel">
                                    <CheckBox IsChecked="{Binding IsSelected}" 
                                              HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Status column with icon -->
                        <DataGridTemplateColumn Header="Status" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="models:ModDisplayModel">
                                    <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                                        <!-- Downloaded icon -->
                                        <mi:MaterialIcon Kind="CheckCircle" Width="16" Height="16" Foreground="Green"
                                                         IsVisible="{Binding Status, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:ModDownloadStatus.Downloaded}}"/>
                                        <!-- Update available icon -->
                                        <mi:MaterialIcon Kind="ArrowUpCircle" Width="16" Height="16" Foreground="Orange"
                                                         IsVisible="{Binding Status, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:ModDownloadStatus.UpdateAvailable}}"/>
                                        <!-- Not downloaded icon -->
                                        <mi:MaterialIcon Kind="CloudDownloadOutline" Width="16" Height="16" Opacity="0.5"
                                                         IsVisible="{Binding Status, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:ModDownloadStatus.NotDownloaded}}"/>
                                        <!-- Downloading icon -->
                                        <mi:MaterialIcon Kind="CloudSync" Width="16" Height="16" Foreground="DodgerBlue"
                                                         IsVisible="{Binding Status, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:ModDownloadStatus.Downloading}}"/>
                                        <!-- Failed icon -->
                                        <mi:MaterialIcon Kind="AlertCircle" Width="16" Height="16" Foreground="Red"
                                                         IsVisible="{Binding Status, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:ModDownloadStatus.Failed}}"/>
                                        <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Mod name -->
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>

                        <!-- Author -->
                        <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150" IsReadOnly="True"/>

                        <!-- Mod ID -->
                        <DataGridTextColumn Header="ID" Binding="{Binding ModId}" Width="80" IsReadOnly="True"/>

                        <!-- Updated -->
                        <DataGridTemplateColumn Header="Updated" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="models:ModDisplayModel">
                                    <TextBlock Text="{Binding UpdatedAt, StringFormat='{}{0:yyyy-MM-dd}'}" 
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>

        <!-- Footer with stats and actions -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto" Margin="0,15,0,0">
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                <TextBlock Opacity="0.7">
                    <Run Text="{Binding TotalMods}"/>
                    <Run Text=" mods total"/>
                </TextBlock>
                <StackPanel Orientation="Horizontal" Spacing="5" IsVisible="{Binding UpdatesAvailable}">
                    <mi:MaterialIcon Kind="ArrowUpCircle" Width="16" Height="16" Foreground="Orange"/>
                    <TextBlock Foreground="Orange">
                        <Run Text="{Binding UpdatesAvailable}"/>
                        <Run Text=" update(s) available"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <Button Command="{Binding SelectAllUpdatesCommand}" 
                        IsVisible="{Binding UpdatesAvailable}"
                        ToolTip.Tip="Select all mods with updates available">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <mi:MaterialIcon Kind="SelectAll" Width="16" Height="16"/>
                        <TextBlock Text="Select Updates"/>
                    </StackPanel>
                </Button>
                <Button Classes="accent">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <mi:MaterialIcon Kind="Download" Width="16" Height="16"/>
                        <TextBlock Text="Download Selected"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
